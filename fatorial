#include <stdio.h>

int fatorial(int valor)
{
	int v1 = 1;
	int i = valor;
	for(i; valor > 1; valor--)
	{
		v1 = v1*valor;
	}
	return v1;
}

int main()
{
	int num = 0;
	int mostra = 0;
	printf("Digite o numero que deseja saber o fatorial: ");
	scanf("%d", &num);
	mostra = fatorial(num);
	printf("O fatorial do seu numero e: %d", mostra);
	return 0;	
}
